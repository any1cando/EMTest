<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.panevrn.emtest.ui.enter.OnboardingFragment"
        android:label="Онбординг" >
        <action
            android:id="@+id/action_onboardingFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.panevrn.emtest.ui.enter.AuthFragment"
        android:label="Авторизация">
        <action
            android:id="@+id/action_authFragment_to_coursesFragment"
            app:destination="@+id/coursesFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/coursesFragment"
        android:name="com.panevrn.emtest.ui.main.CoursesFragment"
        android:label="Курсы">

    </fragment>

</navigation>